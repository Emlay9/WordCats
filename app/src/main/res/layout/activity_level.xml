<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:background="@drawable/level_background"
    tools:context="com.example.emily.wordswipe.LevelActivity">

    <TextView
        android:id="@+id/E_in_ELF"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/letter_background_shape"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="E"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/L_in_ELF"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@+id/E_in_ELF"
        android:background="@drawable/letter_background_shape"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="l"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/F_in_ELF"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@+id/L_in_ELF"
        android:background="@drawable/letter_background_shape"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="f"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/S_in_SHE"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/E_in_ELF"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/letter_background_shape"
        android:gravity="center"
        android:text="s"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/H_in_SHE"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@id/E_in_ELF"
        android:layout_marginRight="2dp"
        android:layout_toRightOf="@+id/S_in_SHE"
        android:background="@drawable/letter_background_shape"
        android:gravity="center"
        android:text="h"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/E_in_SHE"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@id/E_in_ELF"
        android:layout_marginRight="2dp"
        android:layout_toRightOf="@+id/H_in_SHE"
        android:background="@drawable/letter_background_shape"
        android:gravity="center"
        android:text="e"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/S_in_SELF"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/S_in_SHE"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/letter_background_shape"
        android:gravity="center"
        android:text="s"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/E_in_SELF"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/S_in_SHE"
        android:layout_marginRight="2dp"
        android:layout_toRightOf="@+id/S_in_SELF"
        android:background="@drawable/letter_background_shape"
        android:gravity="center"
        android:text="e"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/L_in_SELF"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/S_in_SHE"
        android:layout_marginRight="2dp"
        android:layout_toRightOf="@+id/E_in_SELF"
        android:background="@drawable/letter_background_shape"
        android:gravity="center"
        android:text="l"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/F_in_SELF"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/S_in_SHE"
        android:layout_marginRight="2dp"
        android:layout_toRightOf="@+id/L_in_SELF"
        android:background="@drawable/letter_background_shape"
        android:gravity="center"
        android:text="f"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/first_letter_picked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:visibility="invisible"
        android:layout_below="@+id/F_in_SELF"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:layout_marginTop="80dp"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/second_letter_picked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_marginTop="80dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:layout_below="@+id/F_in_SELF"
        android:layout_toRightOf="@+id/first_letter_picked"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/third_letter_picked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/F_in_SELF"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/second_letter_picked"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/fourth_letter_picked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/F_in_SELF"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/third_letter_picked"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/fifth_letter_picked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/F_in_SELF"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/fourth_letter_picked"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/F_in_FLESH"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@+id/F_in_ELF"
        android:background="@drawable/letter_background_shape"
        android:gravity="center"
        android:text="f"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/L_in_FLESH"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@+id/F_in_FLESH"
        android:background="@drawable/letter_background_shape"
        android:gravity="center"
        android:text="L"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/E_in_FLESH"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@+id/L_in_FLESH"
        android:background="@drawable/letter_background_shape"
        android:gravity="center"
        android:text="E"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/S_in_FLESH"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@+id/E_in_FLESH"
        android:background="@drawable/letter_background_shape"
        android:gravity="center"
        android:text="S"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/H_in_FLESH"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@+id/L_in_SHELF"
        android:background="@drawable/letter_background_shape"
        android:gravity="center"
        android:text="H"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/S_in_SHELF"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/E_in_ELF"
        android:layout_marginRight="2dp"
        android:layout_toRightOf="@+id/F_in_ELF"
        android:background="@drawable/letter_background_shape"
        android:gravity="center"
        android:text="s"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/H_in_SHELF"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/E_in_ELF"
        android:layout_marginRight="2dp"
        android:layout_toRightOf="@+id/F_in_FLESH"
        android:background="@drawable/letter_background_shape"
        android:gravity="center"
        android:text="H"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/E_in_SHELF"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/E_in_ELF"
        android:layout_marginRight="2dp"
        android:layout_toRightOf="@+id/L_in_FLESH"
        android:background="@drawable/letter_background_shape"
        android:gravity="center"
        android:text="E"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/L_in_SHELF"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/E_in_ELF"
        android:layout_marginRight="2dp"
        android:layout_toRightOf="@+id/E_in_FLESH"
        android:background="@drawable/letter_background_shape"
        android:gravity="center"
        android:text="L"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/F_in_SHELF"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/E_in_ELF"
        android:layout_marginRight="2dp"
        android:layout_toRightOf="@+id/S_in_FLESH"
        android:background="@drawable/letter_background_shape"
        android:gravity="center"
        android:text="F"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/letter_choice_circle"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"
        android:background="@drawable/circle_letter_bg" />

    <TextView
        android:id="@+id/top_letter_choice"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"
        android:gravity="center"
        android:text="e"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/left_top_letter_choice"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@+id/top_letter_choice"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="s"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/right_top_letter_choice"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@+id/top_letter_choice"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/left_top_letter_choice"
        android:gravity="center"
        android:text="h"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/left_bottom_letter_choice"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@+id/left_top_letter_choice"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="l"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/right_bottom_letter_choice"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@+id/left_top_letter_choice"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@+id/left_bottom_letter_choice"
        android:gravity="center"
        android:text="f"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold" />


</RelativeLayout>
